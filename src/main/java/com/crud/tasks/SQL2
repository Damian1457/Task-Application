1.
SELECT U.NAME, P.ID
FROM ISSUELISTS U
JOIN Issues P ON U.ID = P.ISSUELISTS_ID;

2.
SELECT P.ID, U.FIRSTNAME, P.DESCTIPTION, P.SUMMARY
FROM USERS U
JOIN ISSUES P ON U.ID = P.ID;

3.
SELECT U.FIRSTNAME, U.LASTNAME, I.DESCTIPTION, I.USER_ID_ASSIGNEDTO, COUNT(*) AS TASK_NUMBER
FROM USERS U
JOIN ISSUES I ON U.ID = I.USER_ID_ASSIGNEDTO;